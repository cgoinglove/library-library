{
  "extends": "@config/typescript/base.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "types": ["node", "vitest/globals"]
  },
  "include": ["**/*.ts", "**/*.tsx", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
